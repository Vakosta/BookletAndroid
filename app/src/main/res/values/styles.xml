<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferencesTheme</item>
    </style>

    <style name="PreferencesTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="EditTextLight">
        <item name="colorControlNormal">#d1d1d1</item>
        <item name="colorControlActivated">#5690ff</item>
        <item name="colorControlHighlight">#5690ff</item>
        <item name="android:textColorHint">#d1d1d1</item>
    </style>

    <style name="ProgressDark">
        <item name="colorAccent">#5690ff</item>
    </style>

</resources>
