<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_plus_notifications">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_check_bold"
            android:padding="4dp"
            android:tint="#fff"
            app:srcCompat="@drawable/check_bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="@font/futurapt_medium"
            android:text="Бесплатный доступ к уведомлениям"
            android:textColor="?attr/colorPlusTextBlockTitle"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/futurapt_medium"
        android:gravity="center_vertical"
        android:text="Пригласите пять друзей и получите бесплатную подписку на год"
        android:textColor="?attr/colorPlusTextBlockContent"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/invites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/invite1"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/background_invite_round_blue"
            android:padding="12dp"
            android:src="@drawable/account" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/invite2"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/background_invite_round_green"
            android:padding="12dp"
            android:src="@drawable/account" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/invite3"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/background_invite_round_orange"
            android:padding="12dp"
            android:src="@drawable/account" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/invite4"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/background_invite_round_red"
            android:padding="12dp"
            android:src="@drawable/account" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/invite5"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/background_invite_round_violet"
            android:padding="12dp"
            android:src="@drawable/account" />

    </LinearLayout>

    <TextView
        android:id="@+id/invites_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invites"
        android:layout_centerHorizontal="true"
        android:text="Переходов: 2/5"
        android:textColor="#a4a4a4"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/invite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/invites_count"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_plus_button_invite"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/futurapt_medium"
        android:gravity="center"
        android:text="Пригласить друзей"
        android:textColor="#fff"
        android:textSize="20sp" />

</RelativeLayout>