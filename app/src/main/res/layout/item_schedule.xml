<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemSchedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_schedule_item_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/scheduleItemIndex"
        android:layout_width="26dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/loading_points"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scheduleItemSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/loading"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/scheduleItemHomework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_points"
            android:textColor="?attr/colorTextHomework"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/scheduleItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_points"
            android:textColor="?attr/colorTextTimeOfLesson"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scheduleItemLink"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0"
            android:background="@drawable/background_transparent_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/link" />

        <ImageView
            android:id="@+id/scheduleItemAttachment"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0"
            android:background="@drawable/background_transparent_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/paperclip" />

        <LinearLayout
            android:id="@+id/scheduleMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp" />

    </LinearLayout>

</LinearLayout>